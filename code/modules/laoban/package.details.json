{
  "template":    "typescript",
  "name":        "laoban",
  "description": "A cli for managing projects that have many npm packages",
  "packageJson": {
    "bin":             {
      "laoban": "dist/index.js"
    },
    "dependencies":    {
      "fs-extra":  "^9.0.1",
      "commander": "^10.0.0"
    },
    "devDependencies": {
      "@types/fs-extra": "^9.0.5"
    },
    "keywords":        [
      "monorepo",
      "devops"
    ]
  },
  "links":       [
    "@laoban/variables",
    "@laoban/generations",
    "@laoban/validation",
    "@laoban/debug",
    "@laoban/node",
    "@laoban/filesops-node",
    "@laoban/comparefiles",
    "@laoban/fast-xml-parser"
  ],
  "guards":      {
    "publish": true,
    "test":    true,
    "compile": true
  }
}