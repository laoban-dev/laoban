{
  "scripts": {
    "ls-mvn":            {
      "description": "Lists all the maven projects",
      "commands":    [
        {
          "guard":   "${packageDetails.guards.mvn}",
          "command": "js:process.cwd()"
        }
      ]
    },
    "mvn":               {
      "description":  "mvn use -- and then specify the maven arguments e.g. laoban mvn -- clean install",
      "inLinksOrder": true,
      "commands":     {
        "guard":   "${packageDetails.guards.mvn}",
        "command": "mvn ${argsAfterMinus}"
      }
    },
    "mvn-clean-install": {
      "description":  "mvn clean install",
      "inLinksOrder": true,
      "commands":     [
        {
          "guard":   "${packageDetails.guards.mvn}",
          "name":    "mvn-clean-install",
          "command": "mvn clean install",
          "status":  true
        }
      ]
    },
    "mvn-clean":         {
      "description": "mvn clean",
      "commands":    [
        {
          "guard":   "${packageDetails.guards.mvn}",
          "command": "mvn clean"
        }
      ]
    },
    "mvn-compile":       {
      "description":  "mvn compile",
      "inLinksOrder": true,
      "commands":     [
        {
          "guard":   "${packageDetails.guards.mvn}",
          "name":    "mvn-compile",
          "command": "mvn compile",
          "status":  true
        }
      ]
    }
  }
}