{
  "templates": {
    "react_typescript": "@laoban@/templates/typescript_react"
  },
  "scripts":   {
    "run-react": {
      "description": "${packageManager} start for all  projects that have a port defined in package.details.json",
      "guard":       "${packageDetails.details.port}",
      "commands":    ["${packageManager} start"],
      "env":         {"PORT": "${packageDetails.details.port}"}
    },
    "ls-react":  {
      "description": "lists the package that have a port defined in package.details.json",
      "guard":       "${packageDetails.details.port}",
      "commands":    [
        "js: '${packageDetails.name}'.padEnd(40)+ ' React ${packageDetails.details.port} Java ${packageDetails.details.javaPort}'"
      ]
    }
  }
}
