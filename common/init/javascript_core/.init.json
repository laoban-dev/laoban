{
  "laoban.json":          {
    "packageManager": "yarn",
    "parents":        [
      "@laoban@/laoban.json/core.laoban.json"
    ],
    "properties":     {
      "license":    "${projectJson.license}",
      "repository": "${projectJson.repository}"
    }
  },
  "project.details.json": [
    {
      "guardfile":     "project.json",
      "variableFiles": {"projectJson": "project.json"},
      "contents":      {
        "template":    "typescript",
        "name":        "${projectJson.name}",
        "description": "${projectJson.description}",
        "details":     {
          "publish": false,
          "test":    true,
          "links":   []
        }
      }
    }
  ]
}
