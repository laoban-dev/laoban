{
  "name":        "${packageDetails.name}",
  "description": "${packageDetails.description}",
  "version":     "${version}",
  "bin":{
    ${packageDetails.details.extraBins:object:indent4}
  },
  "keywords": [${packageDetails.details.keywords:map<<>>(kw=>"<<kw>>")}],
  "license": "${properties.license}",
  "repository": "${properties.repository}",
  "dependencies": {
        ${compose(
            packageDetails.details.extraDeps:object:indent4,
            packageDetails.details.links:map<<>>(i=>"<<i>>": "<<version>>")
         )}
  },
  "devDependencies": {
      ${packageDetails.details.extraDevDeps:object:indent4}
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/src/"
  ],
  "main": "index",
  "scripts": {
    "test": "jest --config jest.config.json",
    "test:watch": "npm run test -- --watch"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  }
}
